<!DOCTYPE html>
<html>
  <head>
    <title>actopus</title>
    <link href='http://fonts.googleapis.com/css?family=Inconsolata:400' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>

  <body>

    <div class="header">
      <div class="container">

        <h1>actopus</h1>
        <div class="header-buttons">
          <%= fa_stack_btn(klasses_path, '時間割を見る', 'search') %>
          <%= fa_stack_btn(lecturers_path, '教員を見る', 'user') %>
          <%= fa_stack_btn(reschedulings_path, '時間割変更を見る', 'exchange') %>
        </div>
      </div>

    </div>

    <div class="container">
      <div class="content">
        <%= yield %>
      </div>
    </div>

    <%= render 'shared/footer' %>

  </body>
</html>

