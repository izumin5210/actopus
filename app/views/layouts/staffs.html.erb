<!DOCTYPE html>
<html>
  <head>
    <title>actopus</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="nav">
      <h1>
        <%= link_to 'actopus', staffs_home_path %>
        <br>
        <small>
          <%= link_to Settings.github_repo do %>
            <i class="fa fa-github"></i>
            <%= "v#{Settings.version}" %>
          <% end %>
        </small>
      </h1>
      <nav>
        <ul>
          <%= link_to new_staffs_rescheduling_path do %>
            <li><i class="fa fa-caret-right fa-fw"></i> 時間割を変更する</li>
          <% end %>
          <%= link_to staffs_home_path do %>
            <li><i class="fa fa-caret-right fa-fw"></i> 変更一覧を見る</li>
          <% end %>
          <%= link_to staffs_klasses_path do %>
            <li><i class="fa fa-caret-right fa-fw"></i> 時間割を見る</li>
          <% end %>
        </ul>
        <ul>
          <%= link_to new_staffs_timetable_path do %>
            <li><i class="fa fa-caret-right fa-fw"></i> 時間割を読み込む</li>
          <% end %>
          <%= link_to staffs_staffs_path do %>
            <li><i class="fa fa-caret-right fa-fw"></i> スタッフを管理する</li>
          <% end %>
        </ul>
        <ul>
          <%= link_to destroy_staff_session_path, method: :delete do %>
            <li><i class="fa fa-caret-right fa-fw"></i> サインアウトする</li>
          <% end %>
        </ul>
      </nav>
    </div>

    <div class="main">
      <div class="messages">
        <%= render 'shared/messages' %>
      </div>
      <%= yield %>
    </div>

    <%= javascript_include_tag 'application' %>
  </body>
</html>
