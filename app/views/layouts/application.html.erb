<!DOCTYPE html>
<html>
<head>
  <title>actopus</title>
  <link href='http://fonts.googleapis.com/css?family=Inconsolata:400' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class="header-staff">
      <div class="container">
        <h1><%= link_to 'actopus', root_path, class: 'link-actopus' %></h1>
      </div>
    </div>
  </header>
  <div class="container">
    <div class="row">
      <div class="col-md-offset-2 col-md-8">
        <%= render 'shared/messages' %>
        <div class="content">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>

  <%= render 'shared/footer' %>

</body>
</html>
