  <h2>Please Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-input" }) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "#{Staff.human_attribute_name(:email)}", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "#{Staff.human_attribute_name(:password)}", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field remember-checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

