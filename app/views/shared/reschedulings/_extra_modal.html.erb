<div class="modal fade" id="extra-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for @rescheduling, url: staffs_reschedulings_path do |f| %>
        <div class="modal-header">
          <h4 class="modal-title">補講を登録</h4>
        </div>
        <div class="modal-body">
          <dl class="dl-horizontal">
            <dt><%= "#{Lecture.human_attribute_name(:name)}" %></dt>
            <dd id="rescheduled-lecture"></dd>
            <dt><%= "#{Klass.model_name.human}" %></dt>
            <dd id="rescheduled-class"></dd>
            <dt>対象講義</dt>
            <dd>
              <div class="form-group">
                <%= f.collection_select :lecture_id, @lectures, :id, :name, {}, class: 'form-control' %>
              </div>
            </dd>
            <dt>補講日時</dt>
            <dd>
              <div class="form-group">
                <%= f.date_field :taken_on, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.collection_select :period_id, @periods, :id, :to_display, {}, class: 'form-control' %>
              </div>
            </dd>
            <dt>担当教員</dt>
            <dd>
              <ul class="list-unstyled" id="rescheduled-lecturers"></ul>
            </dd>
          </dl>
        </div>
        <div class="modal-footer">
          <%= f.hidden_field :category, value: 'extra' %>
          <%= button_tag '閉じる', class: 'btn btn-default', data: { dismiss: :modal } %>
          <%= button_tag t("enums.rescheduling.category.extra"), class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
