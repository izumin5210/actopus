<div class="modal fade" id="reschedulings-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for @form, url: staffs_reschedulings_path do |f| %>
        <div class="modal-header">
          <h4 class="modal-title">補講を登録</h4>
        </div>
        <div class="modal-body">
          <dl class="dl-horizontal">
            <dt><%= "#{Lecture.human_attribute_name(:name)}" %></dt>
            <dd id="rescheduled-lecture"></dd>
            <dt><%= "#{Klass.model_name.human}" %></dt>
            <dd id="rescheduled-class"></dd>
            <dt>補講日時</dt>
            <dd>
              <div class="form-group">
                <%= f.date_field :after_date, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.collection_select :after_period_id, @periods, :id, :to_display, {}, class: 'form-control' %>
              </div>
            </dd>
            <dt>担当教員</dt>
            <dd>
              <ul class="list-unstyled" id="rescheduled-lecturers"></ul>
            </dd>
          </dl>
        </div>
        <div class="modal-footer">
          <%= f.hidden_field :category %>
          <%= f.hidden_field :lecture_id %>
          <%= button_tag '閉じる', class: 'btn btn-default', data: { dismiss: :modal } %>
          <%= button_tag t("enums.rescheduling.category.#{@form.category}"), class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
