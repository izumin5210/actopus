<div class="modal fade" id="reschedulings-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">休講にする</h4>
      </div>
      <div class="modal-body">
        <dl class="dl-horizontal">
          <dt><%= "#{Lecture.human_attribute_name(:name)}" %></dt>
          <dd id="rescheduled-lecture"></dd>
          <dt><%= "#{Klass.model_name.human}" %></dt>
          <dd id="rescheduled-class"></dd>
          <dt>日時</dt>
          <dd>
            <span id="rescheduled-date"></span>
            <span id="rescheduled-start-time"></span>
            ~
            <span id="rescheduled-end-time"></span>
          </dd>
          <dt>担当教員</dt>
          <dd>
            <ul class="list-unstyled" id="rescheduled-lecturers"></ul>
          </dd>
        </dl>
      </div>
      <div class="modal-footer">
        <%= form_for @rescheduling, url: staffs_reschedulings_path do |f| %>
          <%= f.hidden_field :category, value: 'cancel' %>
          <%= f.hidden_field :lecture_id %>
          <%= f.hidden_field :period_id %>
          <%= f.hidden_field :taken_on %>
          <%= button_tag '閉じる', class: 'btn btn-default', data: { dismiss: :modal } %>
          <%= button_tag t("enums.rescheduling.category.cancel"), class: 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
