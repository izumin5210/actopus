            "string"
          ]
        },
        "identity": {
          "$ref": "#/definitions/lecture/definitions/id"
        },
        "name": {
          "description": "name of the lecture",
          "example": "プログラミング I",
          "type": [
            "string"
          ]
        },
        "grade": {
          "description": "grade of students taking the lecture",
          "example": 1,
          "type": [
            "integer"
          ]
        },
        "overseas_student": {
          "description": "true if the lecture is held for overseas students",
          "example": false,
          "default": false,
