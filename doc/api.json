{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "definitions": {
    "class": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Class",
      "definitions": {
        "id": {
          "description": "unique identifier of class",
          "example": "1e",
          "type": [
            "string"
          ]
        },
        "identity": {
          "$ref": "#/definitions/class/definitions/id"
        },
        "name": {
          "description": "name of the class",
          "example": "1E",
          "type": [
            "string"
          ]
        },
        "grade": {
          "description": "grade of the class",
          "example": 1,
          "type": [
            "integer"
          ]
        },
        "department": {
          "description": "a name of the department",
          "example": "電気情報工学科",
          "type": [
            "string"
          ]
        },
        "course": {
          "description": "a name of the course",
          "example": "情報工学コース",
          "type": [
            "string"
          ]
        }
      },
      "links": [
        {
          "description": "Info for existing class.",
          "href": "/api/v1/classes/{(%23%2Fdefinitions%2Fclass%2Fdefinitions%2Fid)}",
          "method": "GET",
          "rel": "self",
          "title": "Info"
        },
        {
          "description": "List existing classs.",
          "href": "/api/v1/classes",
          "method": "GET",
          "rel": "instances",
          "title": "List"
        }
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/class/definitions/id"
        },
        "name": {
          "$ref": "#/definitions/class/definitions/name"
        },
        "grade": {
          "$ref": "#/definitions/class/definitions/grade"
        },
        "department": {
          "$ref": "#/definitions/class/definitions/department"
        },
        "course": {
          "$ref": "#/definitions/class/definitions/course"
        }
      },
      "type": [
        "object"
      ]
    },
    "lecture": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Lecture",
      "definitions": {
        "id": {
          "description": "unique identifier of lecture",
          "example": 1,
          "type": [
            "string"
          ]
        },
        "identity": {
          "$ref": "#/definitions/lecture/definitions/id"
        },
        "name": {
          "description": "name of the lecture",
          "example": "プログラミング I",
          "type": [
            "string"
          ]
        },
        "special_target": {
          "description": "the target of the lecture(overseasStudent or female)",
          "example": "overseasStudent",
          "default": null,
          "type": [
            "string"
          ]
        },
        "code": {
          "description": "the unique code of lecture",
          "example": 2014121002101231110200,
          "type": [
            "string"
          ]
        },
        "lecturer": {
          "description": "name of the lecture",
          "example": "新井 イスマイル",
          "type": [
            "string"
          ]
        }
      },
      "links": [
        {
          "description": "Info for existing lectures.",
          "href": "/api/v1/lectures/{(%2Fdefinitions%2Flecture%2Fdefinitions%2Fid)}",
          "method": "GET",
          "rel": "self",
          "title": "Info"
        },
        {
          "description": "List existing lectures.",
          "href": "/api/v1/lectures",
          "method": "GET",
          "rel": "instances",
          "title": "List"
        }
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/lecture/definitions/id"
        },
        "name": {
          "$ref": "#/definitions/lecture/definitions/name"
        },
        "grade": {
          "$ref": "#/definitions/class/definitions/grade"
        },
        "department": {
          "$ref": "#/definitions/class/definitions/department"
        },
        "course": {
          "$ref": "#/definitions/class/definitions/course"
        },
        "special_target": {
          "$ref": "#/definitions/lecture/definitions/special_target"
        },
        "periods": {
          "type": [
            "array"
          ],
          "items": {
            "$ref": "#/definitions/period"
          }
        },
        "lecturers": {
          "type": [
            "array"
          ],
          "items": {
            "$ref": "#/definitions/lecture/definitions/lecturer"
          }
        },
        "code": {
          "$ref": "#/definitions/lecture/definitions/code"
        }
      },
      "type": [
        "object"
      ]
    },
    "period": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Period",
      "definitions": {
        "period_time": {
          "description": "the time when the lecture will be start/end",
          "type": [
            "object"
          ],
          "properties": {
            "start_time": {
              "description": "time when the period start",
              "example": "09:00:00+09:00",
              "type": [
                "string"
              ]
            },
            "end_time": {
              "description": "time when the period end",
              "example": "10:30:00+09:00",
              "type": [
                "string"
              ]
            }
          }
        },
        "wday": {
          "description": "wday when the period taken",
          "example": 1,
          "type": [
            "integer"
          ]
        }
      },
      "properties": {
        "start_time": {
          "$ref": "#/definitions/period/definitions/period_time/properties/start_time"
        },
        "end_time": {
          "$ref": "#/definitions/period/definitions/period_time/properties/end_time"
        },
        "wday": {
          "$ref": "#/definitions/period/definitions/wday"
        }
      },
      "type": [
        "object"
      ]
    },
    "rescheduling": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Rescheduling",
      "definitions": {
        "id": {
          "description": "unique identifier of the rescheduling",
          "example": 1,
          "type": [
            "integer"
          ]
        },
        "identity": {
          "$ref": "#/definitions/rescheduling/definitions/id"
        },
        "category": {
          "description": "variations of reschedulings(change, cancel, extra)",
          "example": "change",
          "type": [
            "string"
          ]
        },
        "period": {
          "description": "the preriod that lecture has taken",
          "type": [
            "object"
          ],
          "properties": {
            "start_time": {
              "description": "time when the period start",
              "example": "09:00:00+09:00",
              "type": [
                "string"
              ]
            },
            "end_time": {
              "description": "time when the period end",
              "example": "10:30:00+09:00",
              "type": [
                "string"
              ]
            },
            "taken_on": {
              "description": "date when the period taken",
              "example": "2014-12-10",
              "type": [
                "string"
              ]
            }
          }
        }
      },
      "links": [
        {
          "description": "List existing reschedulings.",
          "href": "/api/v1/reschedulings",
          "method": "GET",
          "rel": "instances",
          "title": "List"
        }
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/rescheduling/definitions/id"
        },
        "category": {
          "$ref": "#/definitions/rescheduling/definitions/category"
        },
        "lecture": {
          "$ref": "#/definitions/lecture"
        },
        "before_period": {
          "$ref": "#/definitions/rescheduling/definitions/period"
        },
        "after_period": {
          "$ref": "#/definitions/rescheduling/definitions/period"
        }
      },
      "type": [
        "object"
      ]
    },
    "timetable": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Timetable",
      "definitions": {
        "category": {
          "description": "variations of this period(normal, addition, cancel)",
          "example": "change",
          "type": [
            "string"
          ]
        },
        "scheduled_on": {
          "description": "date when the period scheduled on",
          "example": "2014-12-10",
          "type": [
            "string"
          ]
        }
      },
      "links": [
        {
          "description": "List class' timetables.",
          "href": "/classes/{(%23%2Fdefinitions%2Fclass%2Fdefinitions%2Fid)}/timetable",
          "method": "GET",
          "rel": "instances",
          "title": "Class' timetable"
        }
      ],
      "properties": {
        "category": {
          "$ref": "#/definitions/timetable/definitions/category"
        },
        "scheduled_on": {
          "$ref": "#/definitions/timetable/definitions/scheduled_on"
        },
        "lecture": {
          "$ref": "#/definitions/lecture"
        },
        "period": {
          "$ref": "#/definitions/period/definitions/period_time"
        },
        "rescheduling": {
          "$ref": "#/definitions/rescheduling"
        }
      },
      "type": [
        "object"
      ]
    }
  },
  "properties": {
    "class": {
      "$ref": "#/definitions/class"
    },
    "lecture": {
      "$ref": "#/definitions/lecture"
    },
    "period": {
      "$ref": "#/definitions/period"
    },
    "rescheduling": {
      "$ref": "#/definitions/rescheduling"
    },
    "timetable": {
      "$ref": "#/definitions/timetable"
    }
  },
  "type": [
    "object"
  ],
  "description": "A schema for ANCT reschedulings API",
  "id": "http://www.akashi.ac.jp/actopus/schema#",
  "links": [
    {
      "href": "actopus.akashi.ac.jp",
      "rel": "self"
    }
  ],
  "title": "actopus API"
}
